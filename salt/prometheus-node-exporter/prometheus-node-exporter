# Set the command-line arguments to pass to the server.
ARGS='--collector.bcache \ 
      --collector.conntrack \
      --collector.cpu \
      --collector.diskstats \
      --collector.filesystem \
      --collector.hwmon  \
      --collector.interrupts \
      --collector.loadavg  \
      --collector.meminfo \
      --collector.mountstats \
      --collector.mdadm \
      --collector.netstat \
      --collector.netstat.fields=(.*) \
      --collector.stat \
      --collector.systemd \
      --collector.tcpstat \
      --collector.textfile.directory=/var/lib/prometheus/node-exporter \
      --collector.textfile \
      --collector.vmstat.fields=(.*) \
      --log.level=info' 
