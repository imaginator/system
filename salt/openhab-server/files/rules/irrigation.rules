// water for 5 minutes


rule "Timed watering triggered"
when
    Item TimedWatering_Switch received update ON or
    Channel "astro:sun:local:set#event" triggered START
then
    logInfo("rules", "WateringTimer activated")
    IrrigationPowerSwitch.sendCommand(ON)
end

rule "Stop watering"
when
    Item TimedWatering_Switch received update OFF or
    System started
then
    logInfo("rules", "WateringTimer finished")
    IrrigationPowerSwitch.sendCommand(OFF)
end
