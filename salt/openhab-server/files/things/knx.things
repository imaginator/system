        Type switch-control     : Channel_Common  "Volume Control"                          [ ga="5/5/2+5/5/2"]
    }
    Thing device KnxButtonsLoungeScreenEnd  "Push Button Kitchen Pillar" @ "kitchen"        [ address="5.3.3" ] {
        Type switch-control     : KitchenPlayPause       "Playback"                         [ ga="5/5/1+5/5/1"]
