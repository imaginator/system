    // 8:Guest Bathroom
    Thing device KnxButtonsLoungeScreenEnd  "Push Button Bathroom Guest" @ "bathroom guest" [ address="8.3.1" ] {
        Type switch-control     : BathroomGuestPlayPause       "Playback"                   [ ga="8/5/1+8/5/1"]
