[Unit]
Description="Record Video camera02"
After=network.target

[Service]
Type=simple
Restart=always
RestartSec=60
User=www-data
StandardOutput=inherit
StandardError=inherit

# chance to cleanup files in /var/web/eyeinthesky.imaginator.com/streams
KillSignal=SIGTERM
RestartKillSignal=SIGTERM
TimeoutStopSec=10

Environment="TZ=Europe/Berlin"
ExecStart=/bin/sh -c exec'          \
    ffmpeg                          \
    -hide_banner                    \
    -loglevel error                 \
    -nostdin                        \
    -nostats                        \
    -xerror                         \
    -stimeout 5000000               \
    -thread_queue_size 2048         \
    -reorder_queue_size 16000       \
    -rtsp_transport tcp             \
    -i rtsp://camera02.imagilan:8554/unicast \
    -c:v copy -an -sn -dn           \
    -f segment                      \
        -segment_time 86400         \
        -initial_offset "$(date +%%s.%%N)" \
        -segment_format matroska    \
        -strftime 1                 \
        "/srv/video/netcams/archive/recordall/camera02-%%Y%%m%%d-%%H%%M%%S.mkv" \
    -c:v copy                       \
    -an                             \
    -f dash                         \
        -use_template 1             \
        -use_timeline 0             \
        -seg_duration 4             \
        -window_size 2              \
        -streaming 1                \
        -extra_window_size 1        \
        -remove_at_exit 1           \
        -utc_timing_url "https://time.akamai.com/?iso" \
        /var/web/eyeinthesky.imaginator.com/streams/index.mpd \
    '

[Install]
WantedBy=multi-user.target

